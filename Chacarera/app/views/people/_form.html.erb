<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>

    <div id="error_explanation">
      <h2> <%= t(:error_msg, count: @person.errors.count, locale: I18n.locale) << " " << (t :prohibited_save_error, model: (t :person)) %>:</h2>
      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t :legal %><br>
    <%= f.check_box :legal %>
  </div>
  <div class="field">
    <%= f.label t :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t :cuil_cuit %><br>
    <%= f.text_field :cuil_cuit %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
