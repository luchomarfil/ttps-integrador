<p id="notice"><%= notice %></p>

<h1> <%= t "crud.listing_people" %></h1>

<table class="table">
  <thead>
    <tr>
      <th> <%= t :legal %></th>
      <th> <%= t :name  %></th>
      <th> <%= t :cuil_cuit %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.legal %></td>
        <td><%= person.name %></td>
        <td><%= person.cuil_cuit %></td>
        <td><%= link_to t(:show), person %></td>
        <td><%= link_to t(:edit), edit_person_path(person) %></td>
        <td><%= link_to t(:destroy), person, method: :delete, data: { confirm: t(:delete_confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('crud.new_person'), new_person_path %>
